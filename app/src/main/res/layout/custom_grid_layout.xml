<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_viewalbum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardElevation="4dp"
        card_view:cardCornerRadius="2dp"
        card_view:cardBackgroundColor="@color/cardviewlayoutbackground">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:id="@+id/albumview"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight=".80"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/albumname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:layout_marginStart="@dimen/_8sdp"
                android:lines="1"
                android:ellipsize="end"
                android:maxLength="15"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:text="@string/adele"/>
    <TextView
        android:id="@+id/artistalbum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:textColor="@color/colorBlack"
        android:lines="1"
        android:textSize="10dp"
        android:maxLength="25"
        android:ellipsize="end"
        android:text="@string/hello"/>

    <TextView
        android:id="@+id/numberofsngs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:textSize="10dp"
        android:textColor="@color/colorBlack"
        android:text="12 Songs"/>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/albumlayoptions"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:layout_width="0dp"
                android:layout_weight=".20"
                android:layout_height="match_parent">
                <TextView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/vertical_ellipsis"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:textSize="12dp"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>